},
{
"type": "text",
"id": "name",
"label": "Name",
"default": "Name"
},
{
"type": "product",
"id": "product",
"label": "Select Product"
}
]
}
],
"presets": [
{
"name": "Review Slider",
"category": "Product layout"
}
]
}
{% endschema %}