<style>
    .main-review-container {
        display: flex;
        width: 100%;
        margin-top: 50px;
        gap: 30px;
    }
  .main-heading {
    text-align: center;
}

    .left {
        width: 30%;
    }

    .right {
        width: 70%;
    }
    .content{
        text-align: center;
       
       overflow: hidden;
    }
    .content h3 {
    font-weight: 600;
}
svg.bi.bi-star-fill {
    fill: orange;
}
.content p{
    margin:10px;
}
  .slick-pre {
  position: absolute; 
  top: 50%;
 right: 130%;
  transform: translateY(-50%);
  background-color: #31373d;
  color: #fff; 
   border: 1px solid black;
 
  padding: 10px; 
  cursor: pointer;
}
.flex {
    display: flex!important;
    flex-direction: column;
    align-items: center;
}


.slick-nex {
    border: 1px solid black;
    position: absolute;
    top: 50%;
    right: 120%;
    transform: translateY(-50%);
    background-color: #31373d;
    color: #fff;
   
    padding: 10px;
    cursor: pointer;
}


  .slick-pre::before {
  content: '\2190';
     font-size:20px;
  }
  .slick-nex::before {
  content: '\2192';
     font-size:20px;
  }
  .main-review-container .product {
   border: 1px solid black;
    max-height: 120px;
    overflow: hidden;
    margin-left: 20px;
}
  .review-product-image {
    display: flex;
    overflow: hidden;
    justify-content: space-around;
    align-items: center;
}
  .review-product-image img{
    width: 100px;
    object-fit: contain;
    height: 100px;
  }
   .review-product-image .title p {
     margin:0px;
   }
  .title{
    margin:0px;
  }
  input.btn.button {
    padding: 7px;
    min-width: 35px;
    min-height: 25px;
}
.image-block{
  width:90%;
}
  .image-block img{
  width:100%;
}
  @media screen and (max-width: 768px) {

    .main-review-container {
      flex-direction: column;
  }

  .left {
        width: 100%;
    }

    .right {
        width: 100%;
    }
</style>






<div class=" page-width main-review-container">
    <div class="left">
        <div class="main-heading">
            {% if section.settings.heading != blank %}
            <h1> {{ section.settings.heading }}</h1>
            {% endif %}
        </div>
    </div>
    <div class="right">
        <div class="slider">
            {% for block in section.blocks %}
                <div class="flex">
            <div class="image-block">
                {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url: '320x' }}" alt="{{ image.alt }}">

                {% endif %}
            </div>
            <div class="content">
                {% if block.settings.heading_block != blank %}
                <h3>{{ block.settings.heading_block }}</h3>
                {% endif %}
                {% if block.settings.des != blank %}
                <p> {{ block.settings.des }}</p>
                {% endif %}
                <span class="star"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
              </svg> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
              <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
            </svg> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
          </svg> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
          <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
        </svg></span>
                {% if block.settings.name != blank %}
                <p> {{ block.settings.name }}</p>

                {% endif %}
                
            </div>
            <div class="product">
                {% assign first_product = all_products[ section.blocks.first.settings.product] %}
                {% if block.settings.product != blank %}
                {% assign product = all_products[ block.settings.product] %}
                <div class="review-product-image">
                    {% if product.featured_image %}
                    <img src="{{ product.featured_image | img_url: '100x' }}" alt="{{product.title}}">
                    {% endif %}
                    <div class="title">
                        <p>{{ product.title }}</p>
                      <p> {{ product.price }}</p>
                      <span>
                        <form method="post" action="/cart/add">

  <input type="hidden" name="id" value="{{ product.variants.first.id }}" />

  <input type="submit" value="Add+" class="btn button" />

</form>
                      </span>
                    </div>
                </div>
                {% endif %}
            </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
</div>

<script>
    $('.slider').slick({
        dots: true,
        infinite: false,
        speed: 300,
        slidesToShow: 2,
        slidesToScroll: 2,
        prevArrow: '<button type="button" class="slick-pre"></button>',
        nextArrow: '<button type="button" class="slick-nex"></button>',
        responsive: [

            {
                breakpoint: 1024,
                settings: {
                    slidesToShow: 2,
                    slidesToScroll: 2,
                    infinite: true,
                    dots: true
                }
            },
            {
                breakpoint: 600,
                settings: {
                    slidesToShow: 1,
                    slidesToScroll: 1
                }
            },
            {
                breakpoint: 480,
                settings: {
                    slidesToShow: 1,
                    slidesToScroll: 1
                }
            }
            // You can unslick at a given breakpoint now by adding:
            // settings: "unslick"
            // instead of a settings object
        ]
    });
</script>








